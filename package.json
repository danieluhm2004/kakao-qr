{
  "name": "typescript-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/danieluhm2004/typescript-template.git",
  "author": "danieluhm2004 <iam@dan.al>",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "start:prod": "cross-env NODE_ENV=production node .",
    "start:dev": "cross-env NODE_ENV=development node .",
    "start:stage": "cross-env NODE_ENV=stage node .",
    "serve": "yarn clean && cross-env NODE_ENV=production tsc-watch --onSuccess \"node .\"",
    "serve:prod": "yarn clean && cross-env NODE_ENV=production tsc-watch --onSuccess \"node .\"",
    "serve:stage": "yarn clean && cross-env NODE_ENV=staging tsc-watch --onSuccess \"node .\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "yarn clean && tsc",
    "build:docker": "yarn clean && docker build ",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "tsc-watch": "4.1.0",
    "typescript": "^4.1.2"
  }
}
